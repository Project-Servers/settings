<time>25</time>
<!-- サブタイトルを設定します -->
<subtitle>ＰＡＣ-ＭＡＮの世界で逃走中！</subtitle>
<!-- ゲーム開始時/途中参加時に配られる
アイテムの個数 半角数字で設定 未設定の場合5個に設定されます-->
<start>
 <egg>9</egg>
 <bone>9</bone>
 <feather>9</feather>
</start>
<!-- 復活時に配られるアイテムの個数 
半角数字で設定 未設定の場合5個に設定されます-->
<rejail>
 <egg>5</egg>
 <bone>5</bone>
 <feather>5</feather>
</rejail>
<!-- 各種地点 ※必須※-->
<location>
 <player>-220.5,6.0,-299.5,180.0,0.0</player>
 <clear>-255.5,71.0,-256.5,180.0,0.0</clear>
 <hunter>-220.5,6.0,-323.5,0.0,0.0</hunter>
 <jail>-255.5,57.0,-256.5,180.0,0.0</jail>
 <rejail1>-290.5,6.0,-278.5,180.0,0.0</rejail1>
 <rejail2>-220.5,6.0,-216.5,180.0,0.0</rejail2>
 <door>-220.5,6.0,-322.5,0.0,0.0</door>
 <opg>-220.5,6.0,-299.5,180.0,0.0</opg>
</location>
<!-- ゲーム自動終了  true/falseでの記述 -->
<auto_end>true</auto_end>
<!-- 自動復活の初期値  true/falseでの記述 -->
<auto_rejail>false</auto_rejail>
<!-- 観戦機能の初期値  true/falseでの記述 -->
<watch>false</watch>
<!-- スポーンを許可する友好モブ 複数指定可能-->
<mob_spawn>
 <type>POLAR_BEAR</type>
</mob_spawn>
<!-- OPG終了時のTP  true/falseでの記述 
trueでテレポートを行う-->
<opg_tp>false</opg_tp>
<!-- 復活可能回数 -->
<rejailcount>10</rejailcount>
<!-- 特殊ブロック 半角数字で設定 0不運/1盲目/2発行/3加速 -->
<spblock>3</spblock>
