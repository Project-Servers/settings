<map>
<!--  マップ名 ※必須※  -->
<name>Theme_Park</name>
<!--  マップバージョン ※必須※  -->
<version>1.0.0</version>
<!-- サブタイトルを設定します -->
<subtitle>テーマパークで逃走中！</subtitle>
<!--  製作者  ※必須※　複数人指定可能  -->
<authors>
<author>Yussan</author>
</authors>
<!--  ゲーム時間 半角数字で設定/分単位/
   未設定の場合25分に設定されます  -->
<time>25</time>
<!--  ゲーム開始時/途中参加時に配られる
アイテムの個数 半角数字で設定 未設定の場合5個に設定されます -->
<start>
<egg>8</egg>
<bone>8</bone>
<feather>8</feather>
</start>
<!--  復活時に配られるアイテムの個数 
 半角数字で設定 未設定の場合5個に設定されます -->
<rejail>
<egg>6</egg>
<bone>6</bone>
<feather>6</feather>
</rejail>
<!-- 各種地点 ※必須※-->
<location>
     <player>128.59,4.06,-31.08,-179.6,0.38</player>
     <clear>-2.43,6.5,14.55,-2.49,-21.82</clear>
     <hunter>128.46,4.0,-41.48,-0.15,-88.17</hunter>
     <jail>-2.45,7.5,4.6,-22.77,-31.65</jail>
     <rejail1>71.4,4.0,103.8,-81.33,-6.99</rejail1>
     <rejail2>182.51,4.0,-105.77,-223.87,6.52</rejail2>
     <door>128.46,4.0,-41.48,-0.15,-88.17</door>
     <opg>128.59,4.06,-31.08,-179.6,0.38</opg>
</location>
<!--  ゲーム自動終了  true/falseでの記述  -->
<auto_end>true</auto_end>

<!--  スポーンを許可する友好モブ 複数指定可能 -->
<mob_spawn>
<type>POLAR_BEAR</type>
<type>BAT</type>
<type>WOLF</type>
</mob_spawn>
</map>