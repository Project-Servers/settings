<?xml version="1.0" encoding="utf-8" standalone="no"?>
<map>
  <!-- マップ名 ※必須※ -->
  <name>チェイスフィールド＆ブロックとりで</name>
  <!-- マップバージョン ※必須※ -->
  <version>1.0.2</version>
  <!-- 製作者  ※必須※　複数人指定可能 -->
  <authors>
    <author>Syuryu0919</author>
  </authors>
  <!-- ゲーム時間 半角数字で設定/分単位/
   未設定の場合25分に設定されます -->
  <time>25</time>
  <!-- サブタイトルを設定します -->
  <subtitle>４色世界で逃走中</subtitle>
  <!-- ゲーム開始時/途中参加時に配られる
アイテムの個数 半角数字で設定 未設定の場合5個に設定されます-->
  <start>
    <egg>9</egg>
    <bone>8</bone>
    <feather>8</feather>
  </start>
  <!-- 復活時に配られるアイテムの個数 
 半角数字で設定 未設定の場合5個に設定されます-->
  <rejail>
    <egg>7</egg>
    <bone>7</bone>
    <feather>7</feather>
  </rejail>
  <!-- 各種地点 ※必須※-->
  <location>
    <player>74.5,10.0,150.5,0.0,0.0</player>
    <clear>5.5,28.0,188.5,0.0,0.0</clear>
    <hunter>-133.0,5.0,150.5,0.0,0.0</hunter>
    <jail>5.5,31.0,121.5,0.0,0.0</jail>
    <rejail1>74.5,10.0,150.5,0.0,0.0</rejail1>
    <rejail2>-55.5,4.0,150.5,0.0,0.0</rejail2>
    <door>-131.5,5.0,151.5,0.0,0.0</door>
    <opg>-109.0,4.0,-150.5,90.0,0.0</opg>
    <!-- shopは設定しなくても可-->
    <shop>-2.5,4.0,150.5,90.0,0.0</shop>
  </location>
  <regions>
    <!-- RegionTypeの設定 -->
    <!-- 個別RegionがactiveでもRegionTypeがactiveでなければregionは動作しない-->
    <!-- RegionType:hunterzoneの初期値をactiveにするかどうか -->
    <hunterzone active="true" />
    <!-- ※RegionType:opgのactive化はOPG開始時に自動で行うためxmlでは設定できません -->
    <!-- 個別Regionの設定 -->
    <!-- typeはhunterzone/opg から選択 , 
        hunterzone→ハンターゾーン
        opg→OPGエリア
        activeはtrue/false  trueで稼働 ※RegionTypeがactive(true)である必要がある,
        idは任意の値で可 他のregionのidと重複しないように
        min,maxは X,Y,Z座標を記入する 
        ※記入漏れがある場合regionは作成されない※ -->
    <region type="opg" active="true" id="ブロックとりでOPGエリア" min="-132,8,155" max="-108,3,145" />
  </regions>
  <!-- ゲーム自動終了  true/falseでの記述 -->
  <auto_end>true</auto_end>
  <!-- 自動復活の初期値  true/falseでの記述 -->
  <auto_rejail>false</auto_rejail>
  <!-- 観戦機能の初期値  true/falseでの記述 -->
  <watch>false</watch>
  <!-- 天候の初期値  半角英数字で設定 0でnormal 1でhot 2でcold  
  指定以外の数値は強制的にnormalになります -->
  <climate>0</climate>
  <!-- スポーンを許可する友好モブ 複数指定可能-->
  <mob_spawn>
    <type>POLAR_BEAR</type>
  </mob_spawn>
  <!-- 時間帯の初期値  半角英数字で設定 0/朝,1/昼,2/夜,  
  指定以外の数値や未設定の場合は0になります -->
  <timezone>1</timezone>
  <!-- OPG終了時のTP  true/falseでの記述 
   trueでテレポートを行う-->
  <opg_tp>false</opg_tp>
  <!-- 復活可能回数 -->
  <rejailcount>10</rejailcount>
  <!-- 特殊ブロック 半角数字で設定 0不運/1盲目/2発行/3加速 -->
  <spblock>0</spblock>
  <desc>§6元ネタ：ニンテンドーランド、マリオカート64,§r§d広さは東京ドームおよそ０．４８個分,§l§b現在のバージョン1.0.2,§4推奨ハンター数2体§r</desc>
</map>